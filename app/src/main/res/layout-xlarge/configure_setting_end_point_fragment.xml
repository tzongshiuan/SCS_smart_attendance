                    android:id="@+id/btn_conf_bluetooth_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_setting"
                    android:text="@string/txt_bluetooth_setting"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/btn_conf_employee_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/btn_setting"
                    android:text="@string/txt_employee_register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_conf_visitor_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/btn_setting"
                    android:text="@string/txt_visitor_register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_conf_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="300dp"
                    android:background="@color/btn_cancel_background"
                    android:text="@string/txt_log_cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/btn_conf_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@color/btn_save_background"
                    android:text="@string/txt_log_done"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

