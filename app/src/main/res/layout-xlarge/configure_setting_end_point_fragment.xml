                <EditText
                    android:id="@+id/edt_rtsp_ip"
                    style="@style/ConfEdtLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:enabled="true"
                    android:inputType="text"
                    android:nextFocusDown="@+id/edt_rtsp_url"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_rtsp_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_rtsp_url"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="@mipmap/icon_account"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_rtsp_url"
                    style="@style/ConfTxtTitleLarge"
