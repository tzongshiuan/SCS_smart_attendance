                    <TextView
                        android:id="@+id/txt_identify_result_idle_time_units"
                        style="@style/ConfTxtTitleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="left|center"
                        android:text="@string/milli_seconds" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_identify_threshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_identify_threshold"
                    style="@style/ConfTxtTitleLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/identify_threshold" />

                <EditText
                    android:id="@+id/edt_identify_threshold"
                    style="@style/ConfEdtLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
