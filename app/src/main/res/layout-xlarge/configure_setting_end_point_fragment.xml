                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_identify_result_idle_seconds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="@mipmap/icon_account"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_identify_result_idle_seconds"
                    style="@style/ConfTxtTitleLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="@string/identify_result_idle_seconds" />

                <EditText
                    android:id="@+id/edt_identify_result_idle_seconds"
                    style="@style/ConfEdtLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
