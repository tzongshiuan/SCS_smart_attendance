<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="invisible"
        ></View>


    <TextView
        android:id="@+id/txt_register_visitor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="28sp"
        android:text="@string/txt_visitor_register"
        android:layout_below="@+id/view"
        android:textColor="@color/white"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_register_visitor_title"
        android:layout_above="@+id/view_bottom"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/layout_conf_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:id="@+id/layout_visitor_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_visitor_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="@mipmap/icon_account"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_visitor_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="26sp"
                    android:textColor="@color/white"
                    android:text="@string/txt_phone_number"/>

                <EditText
                    android:id="@+id/edt_visitor_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:textSize="26sp"
                    android:paddingLeft="5dp"
                    android:gravity="left"
                    android:enabled="false"
                    android:inputType="number"
                    style="@style/ConfEdt"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_visitor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/img_visitor_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="@mipmap/icon_account"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_visitor_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="26sp"
                    android:textColor="@color/white"
                    android:text="@string/txt_visitor_name"/>

                <EditText
                    android:id="@+id/edt_visitor_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="left"
                    style="@style/ConfEdt"
                    android:textSize="26sp"
                    android:inputType="text"
                    android:paddingLeft="5dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_visitor_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/img_visitor_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="@mipmap/icon_account"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_visitor_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="26sp"
                    android:textColor="@color/white"
                    android:text="@string/txt_visitor_email"/>

                <EditText
                    android:id="@+id/edt_employee_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="left"
                    style="@style/ConfEdt"
                    android:textSize="26sp"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:paddingLeft="5dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_visitor_rfid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/img_visitor_rfid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:background="@mipmap/icon_account"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_visitor_rfid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="26sp"
                    android:textColor="@color/white"
                    android:text="@string/txt_card_id"/>

                <EditText
                    android:id="@+id/edt_visitor_rfid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="left"
                    style="@style/ConfEdt"
                    android:textSize="26sp"
                    android:inputType="text"
                    android:enabled="false"
                    android:imeOptions="actionDone"
                    android:paddingLeft="5dp"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn_conf_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_log_cancel"/>

                <Button
                    android:id="@+id/btn_conf_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_log_done"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>



    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"></View>


    <com.gorilla.enroll.lib.widget.WaitingProgressView
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
    </com.gorilla.enroll.lib.widget.WaitingProgressView>


</RelativeLayout>